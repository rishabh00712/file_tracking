<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <title>Track File Status - Rishabh</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />

    <link rel="stylesheet" href="/css/file.css">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">

</head>
<body style="max-height: auto;">
    <% if (typeof error !== 'undefined') { %>
        <div id="notification-bar" class="notification">
            <%= error %>
        </div>
    <% } %>
  <!-- Header with Logo and Date -->
  <div class="div-block-5">
    <img
      src="/pictures/iiest.png"
      alt="IIEST Logo"
      class="image-2"
      loading="lazy"
      width="100"
    />
    <div class="div-block-6">
      <% 
        const now = new Date();
        const formattedDate = `${now.getDate()}/${now.getMonth() + 1}/${now.getFullYear().toString().slice(-2)}`;
      %>
      <p class="paragraph-2 date" style="font-size:14px;"><%= formattedDate %></p>
    </div>
  </div>

  <!-- Page Title -->
  <p class="paragraph-2" style="padding-left: 20px; font-size:17px;">
    Research & Consultancy Cell of IIEST, Shibpur
  </p>

  <!-- Logout Button -->
  <button class="button logout" onclick="location.href='/logout';">LOG OUT</button>

  <!-- Main Container -->
  <div class="container">
    <h1 class="heading-2 paragraph">
       TRACK THE STATUS OF YOUR FILE
    </h1>

    <div class="form-block-3">
      <form
        id="email-form"
        name="email-form"
        action="/search_file"
        method="post"
        class="form-3"
      >
        <div class="input-group">
    <input
        type="text"
        name="file_id"
        id="file_id"
        maxlength="256"
        required
        autofocus
    />
    <label for="file_id">ENTER THE FILE ID</label>
    </div>

        <div class="div-block-4">
          <div class="button_box">
            <input type="submit" class="button" value="SUBMIT" />
          </div>
        </div>
      </form>
    </div>
  </div>
</body>
<script>
     window.addEventListener('DOMContentLoaded', () => {
            const bar = document.getElementById('notification-bar');
            if (bar) {
            bar.classList.add('show'); // Slide down

            setTimeout(() => {
                bar.classList.remove('show'); // Slide back up
            }, 3000);
            }
        });
</script>
</html>
