<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Track File Status - IIEST</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />
  <link rel="stylesheet" href="/css/fileinfo.css" />
</head>
<body>
     <% if (typeof error !== 'undefined') { %>
        <div id="notification-bar" class="notification">
            <%= error %>
        </div>
    <% } %>
  <!-- Header Section -->
  <div class="div-block-5">
    <img src="/pictures/iiest.png" alt="IIEST Logo" class="image-2" />
    <div class="div-block-6">
      <% 
        const now = new Date();
        const formattedDate = `${now.getDate()}/${now.getMonth() + 1}/${now.getFullYear().toString().slice(-2)}`;
      %>
      <p class="paragraph-2 date"><%= formattedDate %></p>
      <p class="paragraph-2 iiest">Research & Consultancy Cell of IIEST, Shibpur</p>
    </div>
  </div>

  <!-- Main Centered Box -->
  <div class="main-box">
    <h1 class="heading">TRACK THE STATUS OF YOUR FILE</h1>

    <!-- File ID Display -->
    <div class="input-group">
      <input type="text" id="file_id" value="<%= file_id %>" readonly />
      <label for="file_id">FILE ID</label>
    </div>

    <!-- File Table -->
<div class="div-block-8">

  <!-- Table Header -->
  <div class="div-block-9 head table-header">
    <div class="div-block-14">
      <p class="paragraph-6 header-text">Department</p>
    </div>
    <div class="div-block-15">
      <p class="paragraph-6 header-text">Date</p>
    </div>
    <div class="div-block-16">
      <p class="paragraph-6 header-text">Status</p>
    </div>
  </div>

  <!-- Table Rows -->
  <% files.forEach(file => { %>
    <div class="div-block-9 mid table-row">
      <div class="div-block-17">
        <p class="paragraph-6 name filename"><%= file.dept_name %></p>
      </div>
      <div class="div-block-18">
        <p class="paragraph-6 name filename"><%= file.date %></p>
      </div>
      <div class="div-block-19">
        <p class="paragraph-6 name status-text"><%= file.status %></p>
      </div>
    </div>
  <% }) %>

</div>


      <!-- Back Button -->
      <a href="/file_search" class="button-2">BACK</a>
    </div>
  </div>
<script>
     window.addEventListener('DOMContentLoaded', () => {
            const bar = document.getElementById('notification-bar');
            if (bar) {
            bar.classList.add('show'); // Slide down

            setTimeout(() => {
                bar.classList.remove('show'); // Slide back up
            }, 3000);
            }
        });
</script>
</body>
</html>
