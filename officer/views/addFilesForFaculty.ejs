<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Login | Office of Research & Consultancy</title>
  <link rel="stylesheet" href="/css/style.css" />

  <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
</head>

<body>
    <% if (typeof error !== 'undefined') { %>
  <div id="alertBox" class="alert error"><%= error %></div>
<% } else if (typeof successMessage !== 'undefined') { %>
  <div id="alertBox" class="alert success"><%= successMessage %></div>
<% } %>
<!-- ‚úÖ TOP NAVIGATION BUTTONS -->
<div class="header-box">
<div class="top-nav">
  <div class="nav-left">
    <a href="/files_info/<%= dept %>" class="nav-button">HOME</a>
    <% if (dept === 'Store & Purchase Section' || dept === 'Dean Office') { %>
      <a href="/fileadd/<%= dept %>" class="nav-button" style="background: linear-gradient(to right, #027393c2, #004464a9);">Add Files</a>
    <% } %>
    <% if (dept === 'Dean Office') { %>
      <a href="/faculties/request-list" class="nav-button">accept faculty members</a>
      <a href="/views-files/dean" class="nav-button">VIEW FILES</a>
      <a href="/search/faculties" class="nav-button">search FOR faculty</a>
    <% } %>
  </div>
</div>
<div id="img-logout">
  <!-- ‚úÖ HEADER SECTION -->
<div class="div-block-5">
  <img src="/pictures/iiest.png" alt="Logo" class="image-2">
  <div class="div-block-6">
    <div class="iiest">Research and Consultancy Cell IIEST Shibpur</div>
    <p><%= dept %>, <%= name %></p>
    <div class="date"><%= new Date().toLocaleDateString() %></div>
  </div>
</div>



</div>

</div>
  <!-- ‚úÖ TOP NAVIGATION BUTTONS -->

<div id="body">
   <div class="container">
    <h1>Research & Consultancy Cell of IIEST, Shibpur</h1>

    <form action="/addFilesForFaculty" method="post">
      <!-- Email -->
      <div class="input-group">
        <label for="email">Enter File Code</label>
        <input
          id="email"
          name="file_code"
          
          required
          autofocus
        />
      </div>

      <!-- Department -->
      <div class="input-group">
                <label for="department">Select Topic</label>
                <select id="department" name="topic" required>
                <option value="Payment">Payment</option>
                <option value="Approval">Approval</option>
                <option value="Others">Others</option>
                </select>
            
        </div>

      <!-- Password -->
      <div class="input-group">
        <label for="password">Enter User Name</label>
        <input
          id="password"
          name="name"
          
          required
        />
        <span class="toggle-btn" id="togglePassword">üëÅÔ∏è‚Äçüó®Ô∏è</span>
      </div>

      <!-- Buttons -->
      <div class="button_box">
        <button type="submit" class="button">SUBMIT</button>

      </div>

    </form>
  </div>

</div>
 

  <script>
    const pwd = document.getElementById("password");
    const toggle = document.getElementById("togglePassword");
    toggle.addEventListener("click", () => {
      const isPwd = pwd.type === "password";
      pwd.type = isPwd ? "text" : "password";
      toggle.textContent = isPwd ? "üôà" : "üëÅÔ∏è‚Äçüó®Ô∏è";
    });
     //noticaiton bar 
          window.addEventListener('DOMContentLoaded', () => {
    const alertBox = document.getElementById('alertBox');
    if (alertBox) {
      alertBox.classList.remove('hide');
      alertBox.style.display = 'block';

      setTimeout(() => {
        alertBox.classList.add('hide');
        setTimeout(() => {
          alertBox.style.display = 'none';
        }, 500);
      }, 3000);
    }
  });
  </script>
</body>
</html>
